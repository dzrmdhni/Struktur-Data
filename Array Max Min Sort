#include <iostream>

using namespace std;
 
int asc;
 
int main()
{
    
    int nilai[5], n, i, max, min;
 
    for(int i=0; i<5; i++)
    {
        cout << "Masukkan nilai " << (i+1) << " : ";
        cin >> nilai[i];
    }
 
    for(int c=1;c<5;c++)
    { 
        for(int d=0;d<5-c;d++)
    { 
        if(nilai[d]<nilai[d+1])
    { 
        asc=nilai[d];
        nilai[d]=nilai[d+1];
        nilai[d+1]=asc; 
    } 
        } 
    }
    
        max = nilai[0];
        min = nilai[0];
        for (i = 0; i < n; i++)
        {
            if (max < nilai[i])  
            {
                max = nilai[i];
            }
            else if (min > nilai[i])  
            {
                min = nilai[i];
            }
        }
    cout << "\nNilai terbesar : " << max;
    cout << "\nNilai terkecil : " << min;
 
    cout<<"\nHasil Pengurutan Adalah ";
    for(int i=0;i<5;i++)
    {
        cout<<"\n"<<nilai[i]<<endl;
    } 
    return 0;
}
